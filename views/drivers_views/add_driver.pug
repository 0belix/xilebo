extends ../layout

block content
  h1 Lägg till förare
  form(method='POST', action='/drivers/add')
    #form-group
      label Förnamn:
      input.form-control(name='firstname', type='text')
    #form-group
      label Efternamn:
      input.form-control(name='lastname', type='text')
    #form-group
      label Klubb:
      input.form-control(name='driversfor', type='text')
    #form-group
      label Började:
      input.form-control(name='joined', type='text')
    #form-group
      label Slutade:
      input.form-control(name='vacated', type='text')
    #form-group
      label Lag Kapten:
      input.form-control(name='teamcaptain', type='text')
    #form-group
      label Övrigt:
      textarea.form-control(name='misc')
    br
    input.btn.btn-primary(type='submit', value='Submit')