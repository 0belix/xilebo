doctype html
html
  head
    meta(charset='utf-8')
    title Speedway
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-dark.navbar-expand-md.bg-dark.justify-content-center
      a.navbar-brand.mr-0(href='/') Speedway
      button.navbar-toggler.ml-1(type='button', data-toggle='collapse', data-target='#collapsingNavbar')
        span.navbar-toggler-icon
      #collapsingNavbar.navbar-collapse.collapse.justify-content-between.align-items-center.w-100
        ul.navbar-nav.mx-auto.text-center
          li.nav-item
            a.nav-link(href='/') Protokoll
          li.nav-item
            a.nav-link(href='/drivers') FÃ¶rare
          li.nav-item
            a.nav-link(href='/clubs') Klubbar
        ul.nav.navbar-nav.flex-row.justify-content-center.flex-nowrap
          if user
            if user._id == '5ab908f9d6672518b8e57a08'
              li.nav-item
                a.nav-link.disabled(href='/users/register') Register
            li.nav-item
              a.nav-link(href='/users/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/users/login') Login
    .container
      br
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018 Pierre Johansson
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')